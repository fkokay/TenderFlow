@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>TenderFlow.AI</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: #f3f4f6;
        }

        .ai-card {
            border-left: 5px solid #0d6efd;
        }

        .source-card {
            transition: transform .15s;
        }
        .source-card:hover {
            transform: scale(1.02);
        }

        .preloader {
            display: none;
        }
    </style>
</head>
<body>

    <!-- HEADER -->
    <nav class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-cpu"></i> TenderFlow.AI
            </a>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">

            <!-- LEFT PANEL – Soru Sor -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <strong><i class="bi bi-chat-dots"></i> Soru Sor</strong>
                    </div>
                    <div class="card-body">
                        <textarea id="txtQuestion" class="form-control" rows="6"
                            placeholder="Örn: TEST kodlu ihalenin detaylarını getir..."></textarea>

                        <button id="btnAsk" class="btn btn-primary w-100 mt-3">
                            <i class="bi bi-send"></i> Gönder
                        </button>

                        <div id="loading" class="preloader mt-3 text-center">
                            <div class="spinner-border text-primary"></div>
                            <p class="text-secondary small mt-2">AI düşünüyor...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT PANEL – AI Cevabı -->
            <div class="col-lg-8">
                <div class="card ai-card shadow-sm">
                    <div class="card-header d-flex justify-content-between bg-white">
                        <strong><i class="bi bi-robot"></i> Yapay Zeka Yanıtı</strong>
                        <span class="badge bg-primary">Gemini + OpenAI RAG</span>
                    </div>
                    <div class="card-body">
                        <div id="ai-answer-text" class="fs-6 text-dark"></div>
                    </div>
                </div>

                <!-- RAG Sonuçları -->
                <div class="mt-4">
                    <h5><i class="bi bi-collection"></i> Kaynak Belgeler (RAG)</h5>
                    <div id="rag-results" class="row g-3"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // --- Basit Markdown → HTML çevirici ---
        function mdToHtml(text) {
            if (!text) return "";

            let html = text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;");

            html = html.replace(/\*\*(.+?)\*\*/g, "<strong>$1</strong>");
            html = html.replace(/^\* (.+)$/gm, "<li>$1</li>");
            html = html.replace(/(<li>[\s\S]+?<\/li>)/g, "<ul>$1</ul>");
            html = html.replace(/\n\n/g, "<br><br>").replace(/\n/g, "<br>");

            return html;
        }

        // --- AI Cevabını Göster ---
        function renderAiAnswer(data) {
            document.getElementById("ai-answer-text").innerHTML = mdToHtml(data.Content);
        }

        // --- RAG Kartlarını Göster ---
        function renderRagSources(items) {
            const container = document.getElementById("rag-results");
            container.innerHTML = "";

            items.forEach(x => {
                container.innerHTML += `
                    <div class="col-md-6">
                        <div class="card source-card shadow-sm">
                            <div class="card-body">
                                <h6 class="fw-bold">ID: ${x.Id}</h6>
                                <p class="text-muted small mb-1">${x.SourceSystem} → ${x.SourceTable}</p>
                                <p class="small">${x.Content}...</p>
                                <span class="badge bg-secondary">${x.SourceKey}</span>
                            </div>
                        </div>
                    </div>
                `;
            });
        }

        // --- API İsteği ---
        async function ask() {
            const q = document.getElementById("txtQuestion").value.trim();
            if (!q) return alert("Lütfen bir soru yazın.");

            document.getElementById("loading").style.display = "block";

            const res = await fetch("/api/ai/ask", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ question: q })
            });

            const data = await res.json();
            renderAiAnswer(data);

            if (data.Sources) renderRagSources(data.Sources);

            document.getElementById("loading").style.display = "none";
        }

        document.getElementById("btnAsk").addEventListener("click", ask);
    </script>
</body>
</html>
